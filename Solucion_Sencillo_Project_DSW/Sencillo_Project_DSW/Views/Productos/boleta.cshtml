@model IEnumerable<Sencillo_Project_DSW.Models.Pedido>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>boleta</title>
    <style>
        body {
            margin-top: 200px;
        }
    </style>
</head>
<body>
    <div class="container">
        <span class="m-2">Fecha: @ViewBag.fecha</span><br />
        <span class="m-2">Hora: @ViewBag.hora</span>
        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cantidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.precio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.monto)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cantidad)
                    </td>
                    <td>
                        S/.@Html.DisplayFor(modelItem => item.precio)
                    </td>
                    <td>
                        S/.@Html.DisplayFor(modelItem => item.monto)
                    </td>
                </tr>
            }
            <tr>
                <td></td>
                <td></td>
                <td>Total</td>
                <td>S/.@Model.Sum(m => m.monto)</td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td>@Html.ActionLink("Salir", "Index", null, new { @class="btn btn-danger"})</td>
            </tr>
        </table>
    </div>
</body>
</html>
