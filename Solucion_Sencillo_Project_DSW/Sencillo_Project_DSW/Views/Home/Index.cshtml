@model IEnumerable<Sencillo_Project_DSW.Models.Producto>
@{
    ViewBag.Title = "Index";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
<link href="~/css/index-css.css" rel="stylesheet">
<title>SENCILLO | Cada vez más cerca</title>

<style>
    .portal {
        display: grid;
        grid-template-columns: repeat(4,1fr);
        grid-gap: 10px;
    }

    .item {
        max-height: 500px;
        height: auto;
    }

    img {
        width: 200px;
        height: 200px;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }

    .texto1 {
        color:gray;
        font-weight: bold;
    }
</style>

<!-- CARRUSEL DE FOTOS-->
<div class="slider">
    <ul>
        <img src="~/img/index-img/banner-1.jpg" alt="">
        <img src="~/img/index-img/banner-2.jpg" alt="">
    </ul>
</div>
<br />
<div class="portal">
    @foreach (var item in Model)
    {
    <div class="item">
        <img src="@Url.Content(string.Format("~/img/productos/{0}.jpg", item.idProducto))" />
        <br />
        @Html.DisplayFor(modelItem => item.marca)
        <br />
        @Html.DisplayFor(modelItem => item.descripcion) x @Html.DisplayFor(modelItem => item.medida)
        <br />
        S/ @Html.DisplayFor(modelItem => item.precio)
        <br />
        @Html.ActionLink("Detalle", "detailsProducto", new { id = item.idProducto })
        <br />
    </div>
    }
</div>